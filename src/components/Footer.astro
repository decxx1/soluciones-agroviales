    telAdminReadble,
    telAdminLinkeable,
    telAdmin2Readble,
    telAdmin2Linkeable,
    telMechanicReadble,
    telMechanicLinkeable,
    telMechanic2Readble,
    telMechanic2Linkeable,
    telPartsReadble,
    telPartsLinkeable,
    email,
    instagram,
} from '@/hooks/env.js';
import CellPhone from '@/icones/CellPhone.astro';
---
<footer class="bg-gray-50 dark:bg-gray-800">
    <div class="p-4 py-6 mx-auto max-w-screen-xl md:p-8 lg:-10 border border-gray-200 mb-20 md:mb-10">
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 lg:grid-cols-8">
            <div class="col-span-2 sm:col-span-4 md:col-span-2 text-center">
                <a
                    href="./"
                    class="mb-4 text-xl font-bold text-gray-900 sm:mb-0 dark:text-white"
                >
                    <img src="logo.svg" class="mb-2 h-16 md:h-20 dark:invert mx-auto" alt="Soluciones Agroviales Logo" />
